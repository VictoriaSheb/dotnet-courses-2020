@model IEnumerable<UsersAndRewards.Models.RewardViewModel>

@{
    ViewData["Title"] = "Index";
    var i = 1;
}

    <div class="Table_">
        <div class="Heading">
            <div style="width: 5%;">№</div>
            <div style="width: 25%;">Награда</div>
            <div style="width: 40%;">Описание</div>
            <div style="width: 30%;">Операции</div>

        </div>
        @foreach (var item in Model)
        {

            <div class="Row">
                <div style="width: 5%;">
                    @(i++)
                    @*@Html.DisplayFor(model => item.Id)*@
                </div>
                <div style="width: 25%;">
                    @Html.DisplayFor(model => item.Name)
                </div>
                <div style="width: 40%;">
                    @Html.DisplayFor(model => item.Description)
                </div>

                <div style="width: 30%;">
                    <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Reward" asp-action="AddOrEdit" asp-route-id="@item.Id">
                        Изменить
                    </a>
                    /
                    <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Reward" asp-action="Delete" asp-route-id="@item.Id">
                        Удалить
                    </a>
                </div>
            </div>
        }
    </div>
     
